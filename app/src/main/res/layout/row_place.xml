<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.colintheshots.databindingexample.Secrets"/>
        <variable
            name="placeDetail"
            type="com.colintheshots.databindingexample.model.PlacesDetail" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@{placeDetail.name}"
            app:font="@{`SourceSansPro-Black.ttf`}"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@{placeDetail.formattedAddress}"
            app:font="@{`SourceSansPro-Regular.ttf`}"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:imageUrl="@{placeDetail.getPhotoUrl()}"
            android:contentDescription="@string/place_image" />
    </LinearLayout>
</layout>